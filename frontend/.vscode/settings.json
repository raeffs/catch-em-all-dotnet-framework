// Platzieren Sie Ihre Einstellungen in dieser Datei, um Standard- und Benutzereinstellungen zu Ã¼berschreiben.
{
    "files.exclude": {
        "**/.git": true,
        "node_modules": true,
        "dist": true,
        "bundles": true,
        "**/*.css": {
            "when": "$(basename).scss"
        },
        "**/*.js": {
            "when": "$(basename).ts"
        }
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "editor.detectIndentation": false,
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "html.format.enable": false,
    "tslint.configFile": "config/tslint.json"
}